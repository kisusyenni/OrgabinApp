<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_report_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="1dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="400dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="1dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <View
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@color/ternaryColor"/>

            <TextView
                android:id="@+id/tv_report_content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                tools:text="Date" />

            <TextView
                android:id="@+id/tv_report_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Title this is lorem ipsum title report dolor sit amet hello world lorem ipsum title dolor sit amet lorem ipsum dolor" />

            <TextView
                android:id="@+id/tv_report_content_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:text="Title this is lorem ipsum title report dolor sit amet hello world lorem ipsum title dolor sit amet lorem ipsum dolor Title this is lorem ipsum title report dolor sit amet hello world lorem ipsum title dolor sit amet lorem ipsum dolor" />

            <TextView
                android:id="@+id/tv_report_sender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/report_sender_title" />

            <TextView
                android:id="@+id/tv_report_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Name" />

            <TextView
                android:id="@+id/tv_report_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="This is sender's address" />

            <TextView
                android:id="@+id/tv_report_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="012345678" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>